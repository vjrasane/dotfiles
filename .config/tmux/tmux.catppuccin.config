set -g @plugin 'catppuccin/tmux'
set -g @catppuccin_window_number_position "left"
set -g @catppuccin_window_middle_separator "|"

set -g @catppuccin_window_default_fill "none"
set -g @catppuccin_window_default_text "#W"

set -g @catppuccin_window_current_fill "all"
set -g @catppuccin_window_current_text "#{pane_current_command}"

set -g @catppuccin_window_left_separator " █"
set -g @catppuccin_window_right_separator "█"
set -g @catppuccin_window_number_position "right"
set -g @catppuccin_window_middle_separator " | "

set -g @catppuccin_status_modules_left "session"
set -g @catppuccin_status_modules_right "directory gitmux" 
set -g @catppuccin_status_left_separator "█"
set -g @catppuccin_status_right_separator "█"
set -g @catppuccin_status_fill "icon"
set -g @catppuccin_status_connect_separator "no"
set -g @catppuccin_status_justify "left"

set -g @catppuccin_directory_text "#($HOME/.config/tmux/format_path.sh \"#{pane_current_path}\")"
set -g @catppuccin_date_time_text "%H:%M"
set -g @catppuccin_gitmux_text "#(gitmux -cfg $HOME/.config/tmux/.gitmux.conf \"#{pane_current_path}\")"

set -g @catppuccin_flavor 'frappe'
